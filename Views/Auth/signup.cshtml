@model MSTourism.Models.user_tbl
@{
    ViewBag.Title = "Sign Up";
}

<div class="d-flex justify-content-center align-items-center vh-100"
     style="background-image: url('@Url.Content("~/Content/SRC/img/img04.jpg")');
            background-size: cover;
            background-position: center;
            color: #fff;">
    <div class="container p-5" style="max-width: 400px; background: rgba(0, 0, 0, 0.7); border-radius: 8px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
        <h1 class="display-4 mb-4">Sign Up</h1>
        @using (Html.BeginForm("signup", "Auth", FormMethod.Post))
        {
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Name, new { @class = "h5 mb-2" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg", placeholder = "Enter Username" })
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.Password, new { @class = "h5 mb-2" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "Enter Password" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100" style="border-radius: 50px;">Sign Up</button>
        }
        <div class="mt-3">
            <p>Already have an account? @Html.ActionLink("Login", "index", "Auth", new { area = "" })</p>
        </div>
    </div>
</div>
